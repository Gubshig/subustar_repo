<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_signup_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:gravity="center"
                android:lineSpacingExtra="5dp"
                android:text="SUBUSTA에 오신 것을 환영합니다!\n\n아래 항목을 쓰고 이메일 인증 후 \n회원가입 버튼을 눌러주세요."
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="10dp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_signup_title">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/text_signup_un"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="아이디"
                        tools:layout_editor_absoluteX="193dp"
                        tools:layout_editor_absoluteY="0dp" />

                    <EditText
                        android:id="@+id/edit_signup_un"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="20자 이내로 입력해주세요."
                        android:inputType="textPersonName"
                        android:textSize="15dp"
                        tools:layout_editor_absoluteX="116dp"
                        tools:layout_editor_absoluteY="35dp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/text_signup_nm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="이름"
                        tools:layout_editor_absoluteX="193dp"
                        tools:layout_editor_absoluteY="84dp" />

                    <EditText
                        android:id="@+id/edit_signup_nm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="20자 이내로 입력해주세요."
                        android:inputType="textPersonName"
                        android:textSize="15dp"
                        tools:layout_editor_absoluteX="99dp"
                        tools:layout_editor_absoluteY="111dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/text_signup_ag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="나이"
                        tools:layout_editor_absoluteX="193dp"
                        tools:layout_editor_absoluteY="164dp" />

                    <EditText
                        android:id="@+id/edit_signup_ag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="numberPassword"
                        android:textSize="15dp"
                        tools:layout_editor_absoluteX="99dp"
                        tools:layout_editor_absoluteY="191dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/text_signup_pn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="연락처"
                        tools:layout_editor_absoluteX="186dp"
                        tools:layout_editor_absoluteY="244dp" />

                    <EditText
                        android:id="@+id/edit_signup_pn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="phone"
                        android:textSize="15dp"
                        tools:layout_editor_absoluteX="99dp"
                        tools:layout_editor_absoluteY="271dp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/text_signup_ac"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="기관 이름"
                        tools:layout_editor_absoluteX="178dp"
                        tools:layout_editor_absoluteY="324dp" />

                    <EditText
                        android:id="@+id/edit_signup_ac"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="시스템에 등록된 기관 이름"
                        android:inputType="textPersonName"
                        android:textSize="15dp"
                        tools:layout_editor_absoluteX="99dp"
                        tools:layout_editor_absoluteY="351dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/text_signup_em"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="이메일"
                        tools:layout_editor_absoluteX="186dp"
                        tools:layout_editor_absoluteY="404dp" />

                    <EditText
                        android:id="@+id/edit_signup_em"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="example@gmail.com"
                        android:inputType="textPersonName"
                        android:textSize="15dp"
                        tools:layout_editor_absoluteX="99dp"
                        tools:layout_editor_absoluteY="431dp" />
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tableLayout">

                <TextView
                    android:id="@+id/text_signup_ck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="인증문자"
                    tools:layout_editor_absoluteX="180dp"
                    tools:layout_editor_absoluteY="484dp" />

                <EditText
                    android:id="@+id/edit_signup_ck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="6자리"
                    android:inputType="textPersonName"
                    tools:layout_editor_absoluteX="99dp"
                    tools:layout_editor_absoluteY="511dp" />

                <Button
                    android:id="@+id/butt_signup_sg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:onClick="event_signup"
                    android:text="확인하기"
                    tools:layout_editor_absoluteX="162dp"
                    tools:layout_editor_absoluteY="564dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>